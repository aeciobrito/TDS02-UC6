@page "/veiculos"
@inject HttpClient Http
@using Estacionamento.MAUI.Models

<h3>Index</h3>

@if(veiculos == null)
{
    <p>Carregando...</p>
}
else if (!veiculos.Any())
{
    <p>Nenhum veículo encontrado.</p>
}

@code {
    List<Veiculo>? veiculos;

    protected override async Task OnInitializedAsync()
    {
        veiculos = await Http.GetFromJsonAsync<List<Veiculo>>("https://localhost:4000/api/Veiculos");
    }
}
