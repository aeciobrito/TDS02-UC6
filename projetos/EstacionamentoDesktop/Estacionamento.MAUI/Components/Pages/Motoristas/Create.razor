@page "/motoristas/create"
@inject HttpClient Http
@inject NavigationManager NavigationManager
@using Estacionamento.MAUI.Models

<h3 class="text-center mb-3">Novo Motorista</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form @onsubmit="CreateMotorista">
            <div class="mb-3">
                <label for="nome" class="form-label">Nome</label>
                <InputText id="nome" @bind-Value="motorista.Nome" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="cpf" class="form-label">CPF</label>
                <InputText id="cpf" @bind-Value="motorista.Cpf" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="telefone" class="form-label">Telefone</label>
                <InputText id="telefone" @bind-Value="motorista.Telefone" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href="/motoristas" class="btn btn-light">Voltar</a>
            </div>
        </form>
    </div>
</div>

@code {
    private Motorista motorista = new Motorista();

    private async Task CreateMotorista()
    {
        await Http.PostAsJsonAsync("api/motoristas", motorista);
        NavigationManager.NavigateTo("/motoristas");
    }
}
